<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="325dip"
              android:layout_height="418dip"
        android:background="@drawable/player_card_big">
    <ImageView
            android:id="@+id/player_stat_imageview_picture"
            android:layout_width="298dip"
            android:layout_height="298dip"
            android:src="@drawable/default_avatar"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
    />
   <TextView
           android:id="@+id/player_stat_textview_name"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:singleLine="true"
           android:text="Elo"
           android:textSize="30dp"
           android:textColor="@android:color/black"
           android:textStyle="bold"
           android:ellipsize="end"
           android:layout_margin="8dp"
       />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <LinearLayout android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_margin="3dp"
                      android:layout_weight="1"
                      android:background="@drawable/game_stats_border"

                >
            <TextView
                    android:id="@+id/player_stat_textview_rank"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    />
            <TextView
                    android:id="@+id/player_stat_textview_ranktitle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    android:text="Rank"
                    android:textSize="12dp"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_margin="3dp"
                      android:gravity="center"
                      android:background="@drawable/game_stats_border"

                >
            <TextView
                    android:id="@+id/player_stat_textview_wins"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"

                    />
            <TextView
                    android:id="@+id/player_stat_textview_winstitle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="Wins"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:layout_margin="3dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:background="@drawable/game_stats_border"

                >
            <TextView
                    android:id="@+id/player_stat_textview_losses"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    />
            <TextView
                    android:id="@+id/player_stat_textview_lossestitle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="Losses"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:orientation="vertical"
                      android:layout_margin="3dp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:background="@drawable/game_stats_border"

                >
            <TextView
                    android:id="@+id/player_stat_textview_played"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    />
            <TextView
                    android:id="@+id/player_stat_textview_playedtitle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="Played"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_margin="3dp"
                      android:layout_weight="1"
                      android:background="@drawable/game_stats_border"

                >
            <TextView
                    android:id="@+id/player_stat_textview_points"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    />
            <TextView
                    android:id="@+id/player_stat_textview_pointstitle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/player_startdate"
                    android:layout_gravity="center"
                    android:text="Points"
                    android:textSize="12dp"
                    />
        </LinearLayout>
        <ImageView android:layout_width="45dp"
                   android:id="@+id/player_stat_imageview_hand"
                   android:layout_height="45dp"
                   android:layout_margin="3dp"
                   android:layout_weight="1"
                   android:src="@drawable/icon_handedness_undefine"/>

    </LinearLayout>

</LinearLayout>