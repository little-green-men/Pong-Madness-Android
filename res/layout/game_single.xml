<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/game_wood_background">
    <LinearLayout
            android:id="@+id/game_single_lyt_thewinnerlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">
        <TextView
              android:id="@+id/game_single_tv_andthe"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:textSize="30sp"
              android:padding="-5dp"
              android:layout_margin="-8dp"
              android:text="and the"
              android:textColor="@color/player_name"
        />
        <TextView
                android:id="@+id/game_single_tv_winner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="60sp"
                android:layout_margin="-8dp"
                android:padding="-5dp"
                android:text="WINNER"
                android:textColor="@color/player_name"
                />
        <TextView
                android:id="@+id/game_single_tv_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="is"
                android:layout_margin="-8dp"
                android:padding="-5dp"
                android:textSize="30sp"
                android:textColor="@color/player_name"
                />

    </LinearLayout>
    <RelativeLayout
            android:id="@+id/game_single_lyt_table"
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_heigth"
        >
        <ImageView
            android:id="@+id/game_single_iv_table"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/game_table_background"/>
        <LinearLayout
            android:id="@+id/game_single_lyt_players"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
        <com.littleGreenMan.Pong_Madness.Widget.PlayerStat
                android:id="@+id/game_single_playerA"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                />
        <com.littleGreenMan.Pong_Madness.Widget.PlayerStat
                android:id="@+id/game_single_playerB"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>
        </RelativeLayout>
    <TextView
            android:id="@+id/game_single_defeated_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/game_single_lyt_table"
            android:text="winner name defeated looser name [score] in X minutes and 3 seconds."
            android:textColor="@android:color/white"
            android:visibility="invisible"
            android:textSize="20sp"
            android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/game_single_lyt_table"
        android:orientation="horizontal"
        android:gravity="center_vertical"

    >

        <LinearLayout
                android:id="@+id/game_single_left_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="invisible"

            >
            <ImageView
                    android:id="@+id/game_single_left_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/game_interface_left_plus"/>
            <ImageView
                    android:id="@+id/game_single_left_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@drawable/game_interface_left_minus"/>
            </LinearLayout>
        <FrameLayout
                android:id="@+id/game_single_score_frame_left"
                android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:visibility="invisible"
                >
        <TextView
                android:id="@+id/game_single_score_left"
                android:layout_height="141dip"
                android:layout_width="161dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:textSize="93dip"
                android:text="0"
                android:background="@drawable/game_placeholder_score"
                />
        </FrameLayout>
        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:gravity="center_horizontal"
                      android:layout_weight="1"
                      android:orientation="vertical"
                >
            <ImageView
                    android:id="@+id/game_single_switcher"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/game_switch_11"/>
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                <Button
                        android:id="@+id/game_single_button_start"
                        android:layout_width="150dip"
                        android:layout_height="55dip"
                        android:layout_gravity="center"
                        android:background="@drawable/game_start_button"
                        android:text="start"
                        android:layout_below="@id/game_single_switcher"
                        android:layout_margin="10dip"
                        android:textSize="38dip"/>
                <Chronometer
                        android:id="@+id/game_single_chronometer"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_below="@id/game_single_switcher"
                        android:layout_margin="10dip"
                        android:textSize="50sp"
                        android:textColor="@android:color/white"
                        android:visibility="invisible"
                        android:background="@drawable/game_chrono"


                        />
            </FrameLayout>
        </LinearLayout>
        <FrameLayout android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:id="@+id/game_single_score_frame_right"
                     android:visibility="invisible"
                >
            <TextView
                    android:id="@+id/game_single_score_right"
                    android:layout_height="141dip"
                    android:layout_width="161dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:textSize="93dip"
                    android:text="0"
                    android:background="@drawable/game_placeholder_score"
                    />
        </FrameLayout>
        <LinearLayout
                android:id="@+id/game_single_right_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="invisible"
            >
            <ImageView
                    android:id="@+id/game_single_right_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/game_interface_right_plus"
                    android:layout_gravity="right"/>
            <ImageView
                    android:id="@+id/game_single_right_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/game_interface_right_minus"
                    android:layout_gravity="right"
                    />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>